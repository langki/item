    <link rel="stylesheet" href="http://api.map.baidu.com/library/SearchInfoWindow/1.5/src/SearchInfoWindow_min.css" type="text/css">
    
    <style>
        .topNavMap {
            width: 100%;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1;
        }
        .topNavMap ul {
            height: 0.8rem;
            padding: 0 0.1rem;
            margin-top: 20px
        }
        .topNavMap ul li {
            margin: 0 0.05rem;
            float: left;
            height: 0.8rem;
            border-radius:5px;
            color: #fff;
            text-align:center;
            line-height: 0.8rem;
            font-size: 0.27rem;
        }
        .topNavMap ul > li:nth-last-child(5){
            width: 1.3rem;
            background-color: #383838;
        }
        .topNavMap ul >  li:nth-last-child(4){
            width: 1.3rem;
            background-color: #F8A116;
        }
        .topNavMap ul > li:nth-last-child(3){
            width: 1.3rem;
            background-color: #17A5B1;
        }
        .topNavMap ul > li:nth-last-child(2){
